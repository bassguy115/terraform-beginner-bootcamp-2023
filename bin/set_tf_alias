#!/bin/bash

# Define the alias to be added
ALIAS_NAME="tf"
ALIAS_COMMAND="terraform"

# Check if the alias already exists in ~/.bashrc
if ! grep -q "alias $ALIAS_NAME=" ~/.bashrc; then
  echo "alias $ALIAS_NAME='$ALIAS_COMMAND'" >> ~/.bashrc
  source ~/.bashrc
  echo "The '$ALIAS_NAME' alias has been added. You can now use it as a shorthand for '$ALIAS_COMMAND'."
else
  echo "The '$ALIAS_NAME' alias already exists in ~/.bashrc."
fi
