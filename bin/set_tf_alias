#!/bin/bash

# Define the alias to be added
ALIAS_NAME="tf"
ALIAS_COMMAND="terraform"

# Check if the alias already exists in ~/.bash_profile
if ! grep -q "alias $ALIAS_NAME=" ~/.bash_profile; then
  echo "alias $ALIAS_NAME='$ALIAS_COMMAND'" >> ~/.bash_profile
  source ~/.bash_profile
  echo "The '$ALIAS_NAME' alias has been added to ~/.bash_profile. You can now use it as a shorthand for '$ALIAS_COMMAND'."
else
  echo "The '$ALIAS_NAME' alias already exists in ~/.bash_profile."
fi

