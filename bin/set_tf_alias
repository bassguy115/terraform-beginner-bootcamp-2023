#!/bin/bash

# Check if the alias already exists
if alias tf >/dev/null 2>&1; then
  echo "The 'tf' alias already exists."
else
  # Add the 'tf' alias
  echo "alias tf='terraform'" >> ~/.bash_profile
  source ~/.bash_profile
  echo "The 'tf' alias has been added. You can now use 'tf' as a shorthand for 'terraform'."
fi